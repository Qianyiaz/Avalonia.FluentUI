<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Version>1.0.1</Version>
        <OutputType>WinExe</OutputType>
        <LangVersion>preview</LangVersion>
        <TargetFramework>net9.0</TargetFramework>
        <ApplicationIcon>Assets\avalonia-logo.ico</ApplicationIcon>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'osx-x64' or '$(RuntimeIdentifier)' == 'osx-arm64'">
        <BundleVersion>1.0.1</BundleVersion>
        <BundleName>Avalonia.FluentUI</BundleName>
        <BundlePackageType>APPL</BundlePackageType>
        <BundleId>com.Qianyiaz.Avalonia.FluentUI</BundleId>
        <BundleDevelopmentRegion>en</BundleDevelopmentRegion>
        <CFBundleShortVersionString>1.0</CFBundleShortVersionString>
        <BundleCopyright>Copyright © Qianyiaz 2025</BundleCopyright>
        <BundleCategory>public.app-category.productivity</BundleCategory>
    </PropertyGroup>

    <ItemGroup Condition="'$(RuntimeIdentifier)' == 'osx-x64' or '$(RuntimeIdentifier)' == 'osx-arm64'">
        <PackageReference Include="Dotnet.Bundle" Version="*"/>
    </ItemGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**"/>
        <PackageReference Include="Avalonia.Desktop" Version="*"/>
        <PackageReference Include="FluentAvaloniaUI" Version="*"/>
        <PackageReference Include="CommunityToolkit.Mvvm" Version="*"/>
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <PackageReference Include="HotAvalonia" Version="*"/>
        <PackageReference Include="Avalonia.Diagnostics" Version="*"/>
    </ItemGroup>

</Project>
