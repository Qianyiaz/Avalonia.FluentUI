<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
             <!--x:Class="Avalonia.FluentUI.Views.Pages.LoginPage"-->
    <StackPanel MinWidth="325" Spacing="5">
        <TextBox IsVisible="{Binding !#TokenCheckBox.IsChecked}" Watermark="用户名"/>
        <TextBox IsVisible="{Binding !#TokenCheckBox.IsChecked}" Watermark="密码" PasswordChar="*"/>
        <TextBox IsVisible="{Binding #TokenCheckBox.IsChecked}" Watermark="用户令牌" PasswordChar="*"/>
        <WrapPanel ItemSpacing="5">
            <CheckBox Name="SaveCheckBox" IsChecked="True" Content="保持登录"/>
            <CheckBox Name="TokenCheckBox" Content="使用令牌(token)登录"/>
        </WrapPanel>
    </StackPanel>
</UserControl>