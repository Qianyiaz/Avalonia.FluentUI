<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Avalonia.FluentUI.ViewModels.Pages"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:Class="Avalonia.FluentUI.Views.Pages.SettingsPage"
    x:DataType="vm:SettingsPageViewModel">

    <UserControl.DataContext>
        <vm:SettingsPageViewModel />
    </UserControl.DataContext>

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:SettingsPageViewModel />
    </Design.DataContext>

    <ScrollViewer
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            VerticalAlignment="Top"
            Margin="8"
            Spacing="5">
            <ui:SettingsExpander
                Header="App Theme"
                IconSource="DarkTheme"
                Description="Change the current app theme.">
                <ui:SettingsExpander.Footer>
                    <ui:FAComboBox
                        SelectedValue="{CompiledBinding ThemeVariantValue}">
                        <ui:FAComboBox.Items>
                            <x:String>System</x:String>
                            <x:String>Light</x:String>
                            <x:String>Dark</x:String>
                        </ui:FAComboBox.Items>
                    </ui:FAComboBox>
                </ui:SettingsExpander.Footer>
            </ui:SettingsExpander>
            
            <ui:SettingsExpander
                Header="Avalonia.FluentUI"
                Description="A modern cross-platform desktop application built with the Avalonia UI framework and FluentAvalonia design system.">
                <ui:SettingsExpander.IconSource>
                    <ui:ImageIconSource Source="/app.ico" />
                </ui:SettingsExpander.IconSource>
                
                <ui:SettingsExpander.Footer>
                    <SelectableTextBlock
                        Foreground="{DynamicResource TextControlForegroundDisabled}"
                        Text="{CompiledBinding Version,StringFormat='{}Version: {0}'}" />
                </ui:SettingsExpander.Footer>
                
                <ui:SettingsExpanderItem
                    IsClickEnabled="True"
                    Content="Check out repo on Github"
                    Command="{CompiledBinding OpenUrl}"
                    ActionIconSource="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2" />
            </ui:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</UserControl>