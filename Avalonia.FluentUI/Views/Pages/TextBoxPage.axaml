<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.FluentUI.Views.Pages.TextBoxPage">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Spacing="16">
            <TextBlock
                Text="TextBoxs"
                FontSize="45" />

            <TextBox
                ToolTip.Tip="A tooltip."
                Watermark="I am a TextBox with a watermark and a tooltip." />

            <TextBox
                Name="Password"
                PasswordChar="*"
                ToolTip.Tip="A tooltip."
                Watermark="I am a PasswordBox with a watermark and a tooltip." />

            <SelectableTextBlock
                TextWrapping="Wrap"
                Text="{Binding #Password.Text,StringFormat='{}Password is {0}'}" />

            <TextBox
                MinHeight="125"
                AcceptsReturn="True"
                Text="This is a multi-line TextBox. You can type multiple lines of text here." />
            
            <MaskedTextBox 
                ToolTip.Tip="I'm a masked textbox."
                Mask="(+09) 000 000 0000"/>
            
            <AutoCompleteBox 
                FilterMode="StartsWith"
                ItemsSource="{x:Static TextBoxPageViewModel.AnimalList}"
                Watermark="Choose your favourite animal." />
        </StackPanel>
    </ScrollViewer>
</UserControl>