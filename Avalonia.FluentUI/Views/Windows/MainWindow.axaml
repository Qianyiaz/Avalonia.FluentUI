<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:Class="Avalonia.FluentUI.Views.Windows.MainWindow"
    TransparencyLevelHint="Mica,AcrylicBlur,None"
    Background="Transparent"
    Title="Avalonia.FluentUI"
    Icon="/app.ico">

    <ui:NavigationView
        Name="RootNavigation"
        PaneDisplayMode="Auto"
        IsSettingsVisible="False"
        SelectionChanged="OnSelectionChanged">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem IconSource="Home" Content="Home" />
            <ui:NavigationViewItem IconSource="ImageAltText" Content="TextBox" />
            <ui:NavigationViewItem IconSource="List" Content="ListBox" />
        </ui:NavigationView.MenuItems>

        <ui:NavigationView.FooterMenuItems>
            <ui:NavigationViewItem IconSource="Settings" Content="Settings" />
        </ui:NavigationView.FooterMenuItems>

        <ui:Frame CacheSize="1" Name="Frame" />
    </ui:NavigationView>
</Window>